<div class="container" id="searchcontainer">
  <h2>Search for the Name or Location</h2>


        <%= form_tag search_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: " 🔍 Search"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>


    <div class="results">
      <% @places.each do |place| %>
      <div class="result">
        <div>
         <%= link_to place.name, place_path(place.id) %>
         <%= link_to place.city, place_path(place.id), class: "city" %>
        </div>
     <br>
      <img src="<%= place.photo %>" alt="Italian Trulli" width="100" height="80">
      <br>
      </div>
      <% end %>
    </div>
</div>
