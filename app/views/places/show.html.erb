<%= image_tag ("hero_homepage.jpeg"), class: "img-fluid" %>
<h3><%= @place.name %></h3>
<p><%= @place.street %>, <%= @place.city %></p>

<h4>Experiences</h4>
<% @experiences.each do |experience| %>
  <div id="carouselExperience" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="card" style="width: 18rem;">
          <%= link_to experience_path(experience) do %>
          <img class="card-img-top" src="https://images.unsplash.com/photo-1574680743387-f2f3b414feab?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="Card image cap">
          <% end %>
          <div class="card-body px-3 py-2">
            <p class="card-text"><%= experience.name %></p>
            <div class="d-flex justify-content-between mb-0">
              <p class="mb-1"><%= experience.average_rating %> <i class="fas fa-coffee"></i></p>
              <p class="mb-1"><i class="fas fa-map-marker-alt"></i> <%= experience.place.city %></p>
            </div>
          </div>
        </div>
        </div>
          </div>
        </div>
<% end %>


<h4>Reviews</h4>

<div class="list-group">
  <% @place.reviews.each do |review| %>
    <a href="#" class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">Rating: <% review.rating.times do %>
          <i class="fas fa-coffee"></i>
          <% end %></h5>
        <small><%= time_ago_in_words(review.created_at) %></small>
      </div>
      <p class="mb-1"><%= review.content %></p>
    </a>
  <% end %>
</div>
