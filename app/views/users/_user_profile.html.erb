<div class="title">
  <h3>My Profile</h3>

  <%= simple_form_for @user, validate: true do |f| %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.submit %>

  <% end %>

  <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-danger' do %>
    <i></i> Log Out Now!
  <% end %>
</div>

