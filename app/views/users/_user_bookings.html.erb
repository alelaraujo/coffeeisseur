<div class="title">
  <h3>My Bookings</h3>
</div>

<% bookings_arr = bookings.sort {|a,b| a.date <=> b.date } %>

<% bookings_arr.each do |booking| %>

  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between">
          <div>
            <p><%= booking.experience.name %></p>
            <p><%= booking.date.strftime('%d-%b-%y') %></p>
          </div>
          <div>
            <p>
              <%= link_to edit_booking_path(booking) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </p>
            <p>
              <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </p>
          </div>
      </div>
        <!-- Disable review button after click / before the booking date -->
        <% disabled_button = booking.review.nil? ? "" : "disabled" %>
        <% if DateTime.now > booking.date %>
          <%= link_to 'Review', new_booking_review_path(booking), class: "d-block btn btn-sm btn-success #{disabled_button}" %>
        <% else %>
          <%= link_to 'Review', new_booking_review_path(booking), class: 'd-block btn btn-sm btn-success disabled' %>
        <% end %>
    </div>
  </div>
<% end %>


