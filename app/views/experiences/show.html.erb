<div class="experience-bg" style="background-image: url('<%= cl_image_path @experience.photo %>');">
  <div class="container">
    <h2 class="text-center"><%= @experience.name %></h2>
    <hr>
    <div class="container">
      <h5 class = "descTitle">About the experience...</h5>
      <p class = "reviewDesc"><%= @experience.description %></p>
    </div>

    <div class = "bookme justify-content-between">
      <%= link_to new_booking_path, {'data-toggle' =>  "modal", 'data-target' => "#bookingModalCenter-#{@experience.id}", class: 'btn btn-success'} do %>
        <i class="fas fa-plus"></i>Book Me!
      <% end %>

      <%= link_to place_path(@experience.place_id), class: 'btn btn-warning' do %>
        Visit the Cafe
      <% end %>
    </div>



      <strong><h4 class= "reviewTitle">Reviews</h4></strong>

      <div class="list-group">
        <% @experience.reviews.each do |review| %>
          <a href="#" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">Rating: <% review.rating.times do %>
                <i class="fas fa-coffee"></i>
                <% end %></h5>
              <small><%= time_ago_in_words(review.created_at) %></small>
            </div>
            <p class="mb-1"><%= review.content %></p>
          </a>
        <% end %>
      </div>
      <!--
    <div class="container">
      <ul>
        <% @experience.reviews.each do |review| %>
          <li> <strong><%= review.content %> - <%= review.rating %>/5 </strong>  </li>
        <% end %>
      </ul>
    </div> -->
  </div>
</div>


<!-- Booking modal -->

<div class="modal fade" id="bookingModalCenter-<%= @experience.id %>" tabindex="-1" role="dialog" aria-labelledby="bookingModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookingModalLongTitle">Booking</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <%= simple_form_for @booking, validate: true do |f| %>
        <%= f.input :date, as: :string, input_html: { class: 'flatpickr-input'} %>
        <%= f.input :experience_id, as: :hidden, :input_html => { value: @experience.id } %>
        <div class="d-flex justify-content-between">
          <%= f.submit class: 'btn btn-primary' %>
          <%= f.button :button, 'Cancel', :type => 'reset', class: "btn btn-outline-secondary", data: { dismiss: "modal", target: "bookingModalCenter-#{@experience.id}" } %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End of Booking modal -->


