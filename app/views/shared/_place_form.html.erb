<%= simple_form_for @place, validate: true do |f| %>
  <%= f.input :name %>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <div class="d-flex justify-content-between">
    <%= f.submit class: 'btn btn-primary mb-2' %>
    <%= link_to 'Cancel', places_path, class: 'btn btn-outline-secondary mb-2' %>
  </div>
<% end %>
