<%= simple_form_for @review, validate: true do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.input :compliment_id %>

  <div class="d-flex justify-content-between">
    <%= f.submit class: 'btn btn-primary mb-2' %>
    <%= link_to 'Cancel', reviews_path, class: 'btn btn-outline-secondary mb-2' %>
  </div>
<% end %>
